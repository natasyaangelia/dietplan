<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgbmi"
    tools:context="com.example.dietplan.dietplanfull.fragment.HomeFragment">
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/textTop"
        android:text="Your Ideal Calories"
        android:textStyle="bold"
        android:layout_height="25dp"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/textColor"
        android:background="@android:color/white" />

    <TextView
        android:layout_width="300dp"
        android:id="@+id/idealCaloriesField"
        android:layout_height="40dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:gravity="center"
        android:textColor="@color/textColor"
        android:background="@drawable/framea"
        android:layout_below="@+id/textTop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/textNext"
        android:text="Calories Consumed"
        android:textStyle="bold"
        android:layout_height="25dp"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/textColor"
        android:background="@android:color/white"
        android:layout_below="@+id/idealCaloriesField"
        android:layout_alignLeft="@+id/textTop"
        android:layout_alignStart="@+id/textTop"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="300dp"
        android:id="@+id/idealCaloriesConsumed"
        android:layout_height="40dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="@color/textColor"
        android:background="@drawable/framea"
        android:layout_below="@+id/textNext"
        android:layout_alignLeft="@+id/idealCaloriesField"
        android:layout_alignStart="@+id/idealCaloriesField" />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/textNext2"
        android:text="Ideal Snack Calorie Level"
        android:textStyle="bold"
        android:layout_height="25dp"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/textColor"
        android:background="@android:color/white"
        android:layout_below="@+id/idealCaloriesConsumed"
        android:layout_alignLeft="@+id/textNext"
        android:layout_alignStart="@+id/textNext"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textColor="@color/brownText"
        android:id="@+id/levelCalorie"
        android:text="Medium"
        android:textSize="20dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/textNext2"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:scaleX="-1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:progressDrawable="@drawable/pb_shape"
        android:layout_above="@+id/textSummary"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/textSummary"
        android:text="Summary"
        android:textStyle="bold"
        android:layout_height="25dp"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/textColor"
        android:background="@android:color/white"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:background="@drawable/num3"
        android:layout_below="@+id/textSummary"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView15" />

    <TextView
        android:layout_width="330dp"
        android:id="@+id/summaryField"
        android:layout_height="40dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:gravity="center"
        android:textColor="@color/textColor"
        android:background="@drawable/framea"
        android:layout_below="@+id/textSummary"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp" />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/textBmi"
        android:text="BMI"
        android:textStyle="bold"
        android:layout_height="25dp"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/textColor"
        android:background="@android:color/white"
        android:layout_below="@+id/summaryField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="330dp"
        android:id="@+id/bmiField"
        android:layout_height="40dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:gravity="center"
        android:textColor="@color/textColor"
        android:background="@drawable/framea"
        android:layout_below="@+id/textBmi"
        android:layout_alignLeft="@+id/summaryField"
        android:layout_alignStart="@+id/summaryField"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Overweight"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:id="@+id/levelBMI"
        android:textColor="@color/brownText"
        android:layout_below="@+id/bmiField"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:scaleX="-1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar1"
        android:progressDrawable="@drawable/pb_shape"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp" />


    <TextView
        android:layout_width="50dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="50"
        android:layout_marginTop="10dp"
        android:id="@+id/morningText"
        android:layout_marginLeft="17dp"
        android:layout_alignTop="@+id/summaryField"
        android:layout_alignLeft="@+id/idealCaloriesConsumed"
        android:layout_alignStart="@+id/idealCaloriesConsumed" />

    <TextView
        android:layout_width="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="50"
        android:id="@+id/afternoonText"
        android:layout_below="@+id/textView15"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="50"
        android:id="@+id/nightText"
        android:layout_alignTop="@+id/summaryField"
        android:layout_alignRight="@+id/progressBar1"
        android:layout_alignEnd="@+id/progressBar1" />


</RelativeLayout>
