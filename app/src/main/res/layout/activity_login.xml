<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bgbmi"
    tools:context="com.example.dietplan.dietplanfull.LoginActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="110dp"
        android:id="@+id/logoLogin"
        android:src="@drawable/logo2"
        android:contentDescription="logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:onClick="back"
        android:background="@drawable/backicon"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:inputType="textEmailAddress"
        android:paddingLeft="7dp"
        android:background="@drawable/emaildanpasscolom"
        android:drawableLeft="@drawable/iconemail"
        android:ems="10"
        android:layout_marginTop="15dp"
        android:textSize="@dimen/activity_horizontal_margin"
        android:id="@+id/emailLoginEditText"
        android:hint="Username"
        android:layout_below="@+id/logoLogin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:inputType="textPassword"
        android:paddingLeft="7dp"
        android:background="@drawable/emaildanpasscolom"
        android:drawableLeft="@drawable/ikonpassword"
        android:textSize="@dimen/activity_horizontal_margin"
        android:ems="10"
        android:id="@+id/passwordLoginEditText"
        android:hint="Password"
        android:layout_below="@+id/emailLoginEditText"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Sign Up"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/activity_horizontal_margin"
        android:textStyle="bold"
        android:id="@+id/logInButton"
        android:onClick="processSignup"
        android:layout_below="@+id/passwordLoginEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/buttonsign"
        android:layout_marginTop="20dp"/>



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/logoOr"
        android:src="@drawable/or"
        android:layout_marginTop="35dp"
        android:layout_alignTop="@+id/logInButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:background="@drawable/fb"
        android:onClick="loginSosmed"
        android:layout_below="@+id/logoOr"
        android:layout_alignLeft="@+id/logTwitter"
        android:layout_alignStart="@+id/logTwitter"
        android:id="@+id/logFB" />

    <Button
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:onClick="loginSosmed"
        android:background="@drawable/twitter"
        android:id="@+id/logTwitter"
        android:layout_marginTop="350dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/logo"
        android:src="@drawable/ikonloat8"
        android:contentDescription="logo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
