<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    tools:context="com.example.dietplan.dietplanfull.Recipe2Activity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:background="@drawable/cookie"
                android:layout_width="1705dp"
                android:layout_height="250dp"
                android:id="@+id/recipe1"
                android:layout_weight="1"
                android:padding="20dip"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="3dp"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="185dp"
                    android:layout_height="50dp"
                    android:id="@+id/judul"
                    android:text="Oat Banana Cookie"
                    android:textColor="@color/brownText"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:background="@drawable/judul"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <RelativeLayout
                    android:layout_width="185dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="185dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/judul"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/textView" />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:text="Jumlah Sajian"
                        android:gravity="center"
                        android:textColor="@color/brownText"
                        android:textStyle="bold"
                        android:textSize="10dp"
                        android:layout_alignTop="@+id/textView"
                        android:layout_alignLeft="@+id/textView"
                        android:layout_alignStart="@+id/textView"
                        android:id="@+id/textView3" />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:text="Durasi Persiapan"
                        android:gravity="center"
                        android:textColor="@color/brownText"
                        android:textStyle="bold"
                        android:textSize="10dp"
                        android:id="@+id/textView2"
                        android:layout_marginLeft="15dp"
                        android:layout_alignTop="@+id/textView"
                        android:layout_toRightOf="@+id/textView3"
                        android:layout_toEndOf="@+id/textView3" />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:text="Durasi Memasak"
                        android:gravity="center"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/brownText"
                        android:textStyle="bold"
                        android:textSize="10dp"
                        android:id="@+id/textView4"
                        android:layout_alignTop="@+id/textView"
                        android:layout_toRightOf="@+id/textView2"
                        android:layout_toEndOf="@+id/textView2" />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:text="6 Porsi"
                        android:gravity="center"
                        android:textColor="@color/brownText"
                        android:textSize="10dp"
                        android:id="@+id/textView5"
                        android:layout_below="@+id/textView3"/>

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:text="2 Menit"
                        android:gravity="center"
                        android:textColor="@color/brownText"
                        android:textSize="10dp"
                        android:id="@+id/textView6"
                        android:layout_below="@+id/textView2"
                        android:layout_alignLeft="@+id/textView2"
                        android:layout_alignStart="@+id/textView2" />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:text="15 menit"
                        android:gravity="center"
                        android:textColor="@color/brownText"
                        android:textSize="10dp"
                        android:id="@+id/textView7"
                        android:layout_below="@+id/textView4"
                        android:layout_alignLeft="@+id/textView4"
                        android:layout_alignStart="@+id/textView4" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="185dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="175dp"
                        android:layout_height="140dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/judul"
                        android:id="@+id/textView8"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:id="@+id/recipePic1"
                        android:background="@drawable/recipe2a"
                        android:layout_alignTop="@+id/textView8"/>

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="3dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="175dp"
                android:layout_height="300dp"
                android:maxLines="10"
                android:background="@drawable/judul"
                android:id="@+id/textView9"
                android:textStyle="bold"
                android:textSize="12dp"
                android:textColor="@color/brownText"
                android:text="Bahan-bahan : \n 1 Buah pisang ukuran sedang \n 1/2 sdt bubuk kayu manis \n 1 3/4 ons oat"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="3dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="185dp"
                android:layout_height="250dp"
                android:background="@drawable/judul"
                android:id="@+id/textView10"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/brownText"
                android:text="Cara Memasak : \n 1. Panaskan oven dengan suhu \n      200C \n 2. Campurkan semua bahan \n      dengan blender \n 3. Bentuk adonan biskuit dengan \n      sendok \n 4. Panggang selama 15 menit \n     Oat banana cookie siap \n     disajikan."
                android:layout_alignTop="@+id/textView9"
                android:layout_alignLeft="@+id/textView8"
                android:layout_alignStart="@+id/textView8"
                android:layout_alignParentBottom="true" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
