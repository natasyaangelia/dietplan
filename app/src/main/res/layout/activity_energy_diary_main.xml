<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fani.dietplan.EnergyDiaryMainActivity">



    <Button
        android:background="@drawable/judul"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="12dp"
        android:onClick="gotoSnack1"
        android:id="@+id/btnSnackMorning" />
    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:onClick="gotoSnack1"
        android:background="@drawable/snackmorning"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/txtHistoryMorningSV"
        android:layout_below="@+id/btnSnackMorning">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:id="@+id/txtHistoryMorning"
            android:paddingLeft="10dp"
            android:textColor="@color/cardview_light_background"
            android:background="@drawable/greensquare"
            android:layout_below="@+id/btnSnackMorning"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />
    </ScrollView>

    <Button
        android:background="@drawable/judul"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="12dp"
        android:onClick="gotoSnack2"
        android:paddingLeft="10dp"
        android:id="@+id/btnSnackAfternoon"
        android:layout_below="@+id/txtHistoryMorningSV"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textAlignment="textStart"
        android:layout_alignEnd="@+id/btnSnackMorning" />

    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:onClick="gotoSnack2"
        android:background="@drawable/snackafternoon"
        android:layout_alignTop="@+id/btnSnackAfternoon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/txtHistoryAfternoonSV"
        android:layout_below="@+id/btnSnackAfternoon">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:id="@+id/txtHistoryAfternoon"
            android:paddingLeft="10dp"
            android:textColor="@color/cardview_light_background"
            android:background="@drawable/greensquare"
            android:layout_below="@+id/btnSnackAfternoon"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />
    </ScrollView>

    <Button
        android:background="@drawable/judul"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="12dp"
        android:id="@+id/btnSnackEvening"
        android:onClick="gotoSnack3"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txtHistoryAfternoonSV"
        android:layout_centerVertical="true"
        android:textAlignment="textStart"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnSnackAfternoon" />

    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:onClick="gotoSnack3"
        android:background="@drawable/snackevening"
        android:layout_alignTop="@+id/btnSnackEvening"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/txtHistoryEveningSV"
        android:layout_below="@+id/btnSnackEvening">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:textColor="@color/cardview_light_background"
            android:id="@+id/txtHistoryEvening"
            android:background="@drawable/greensquare"
            android:layout_below="@+id/btnSnackEvening"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />
    </ScrollView>

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imageView"
        android:src="@drawable/ikonloat8"
        android:contentDescription="logo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
