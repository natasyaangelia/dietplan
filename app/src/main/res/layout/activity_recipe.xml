<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dietplan.dietplanfull.RecipeActivity">


    <EditText
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/kolomsearch"
        android:drawableLeft="@drawable/searchicon"
        android:ems="10"
        android:textSize="@dimen/activity_horizontal_margin"
        android:id="@+id/emailLoginEditText"
        android:hint="Search"
        android:paddingLeft="10dp"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="18dp"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/emailLoginEditText">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:background="@drawable/bananaoat"
                    android:layout_width="180dp"
                    android:layout_height="230dp"
                    android:id="@+id/recipe1"
                    android:layout_weight="1"
                    android:padding="20dip"
                    android:gravity="center"
                    android:onClick="gotoRecipe1"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Button
                    android:layout_width="180dp"
                    android:layout_height="90dp"
                    android:id="@+id/textRecipe1"
                    android:text="Overnight Banana Oatmeal"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textSize="18dp"
                    android:onClick="gotoRecipe1"
                    android:textColor="@android:color/white"
                    android:background="@drawable/frgrndtext"
                    android:layout_alignBottom="@+id/recipe1"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:background="@drawable/cookie"
                    android:layout_width="180dp"
                    android:layout_height="230dp"
                    android:id="@+id/recipe2"
                    android:layout_weight="1"
                    android:padding="20dip"
                    android:gravity="center"
                    android:onClick="gotoRecipe2"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Button
                    android:layout_width="180dp"
                    android:layout_height="90dp"
                    android:id="@+id/textRecipe2"
                    android:text="Oat Banana Cookie"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textSize="18dp"
                    android:onClick="gotoRecipe2"
                    android:textColor="@android:color/white"
                    android:background="@drawable/frgrndtext"
                    android:layout_alignBottom="@+id/recipe2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:background="@drawable/nacho"
                    android:layout_width="180dp"
                    android:layout_height="230dp"
                    android:id="@+id/recipe3"
                    android:layout_weight="1"
                    android:padding="20dip"
                    android:gravity="center"
                    android:onClick="gotoRecipe3"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Button
                    android:layout_width="180dp"
                    android:layout_height="90dp"
                    android:id="@+id/textRecipe3"
                    android:text="Nacho Chesee Crackers"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textSize="18dp"
                    android:onClick="gotoRecipe3"
                    android:textColor="@android:color/white"
                    android:background="@drawable/frgrndtext"
                    android:layout_alignBottom="@+id/recipe3"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:background="@drawable/eggmuffin"
                    android:layout_width="180dp"
                    android:layout_height="230dp"
                    android:id="@+id/recipe4"
                    android:layout_weight="1"
                    android:padding="20dip"
                    android:gravity="center"
                    android:onClick="gotoRecipe4"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Button
                    android:layout_width="180dp"
                    android:layout_height="90dp"
                    android:id="@+id/textRecipe4"
                    android:text="Egg Muffins"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textSize="18dp"
                    android:onClick="gotoRecipe4"
                    android:textColor="@android:color/white"
                    android:background="@drawable/frgrndtext"
                    android:layout_alignBottom="@+id/recipe4"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
