<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bgbmi"
    tools:context="com.example.dietplan.dietplanfull.LevelActivity">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:id="@+id/upButton"
        android:src="@drawable/button1"
        android:contentDescription="logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="5dp"
        android:onClick="back"
        android:background="@drawable/backicon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/textIntro"
        android:text="What is your activity level?"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/brownText"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/upButton"/>

    <Button
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:id="@+id/option1"
        android:focusableInTouchMode="false"
        android:background="@drawable/level1"
        android:onClick="level1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textIntro"/>

    <Button
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:id="@+id/option2"
        android:focusableInTouchMode="false"
        android:background="@drawable/level2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="level2"
        android:layout_below="@+id/option1"/>

    <Button
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:id="@+id/option3"
        android:onClick="level3"
        android:focusableInTouchMode="false"
        android:background="@drawable/level3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/option2"/>

    <Button
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:id="@+id/option4"
        android:focusableInTouchMode="false"
        android:background="@drawable/level4"
        android:onClick="level4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/option3"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/logo"
        android:src="@drawable/ikonloat8"
        android:contentDescription="logo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/next"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:onClick="nextBirthday"
        android:background="@drawable/arrow"
        android:contentDescription="logo"
        android:layout_alignBottom="@+id/logo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
