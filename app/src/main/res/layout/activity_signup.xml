<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bgbmi"
    tools:context="com.example.dietplan.dietplanfull.SignupActivity">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="110dp"
        android:id="@+id/logoLogin"
        android:src="@drawable/logo2"
        android:contentDescription="logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Please fill this field below!"
        android:id="@+id/textUp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/brownText"
        android:layout_below="@+id/logoLogin"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:background="@drawable/emaildanpasscolom"
        android:ems="10"
        android:textSize="@dimen/activity_horizontal_margin"
        android:id="@+id/username"
        android:hint="Username"
        android:paddingLeft="45dp"
        android:layout_below="@+id/textUp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/emaildanpasscolom"
        android:ems="10"
        android:textSize="@dimen/activity_horizontal_margin"
        android:paddingLeft="45dp"
        android:id="@+id/emailLoginEditText"
        android:hint="Email"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/username"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:inputType="textPassword"
        android:background="@drawable/emaildanpasscolom"
        android:textSize="@dimen/activity_horizontal_margin"
        android:ems="10"
        android:id="@+id/passwordLoginEditText"
        android:hint="Password"
        android:paddingLeft="45dp"
        android:layout_below="@+id/emailLoginEditText"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/iconemail"
        android:id="@+id/imageView4"
        android:layout_below="@+id/textUp"
        android:layout_alignLeft="@+id/logoLogin"
        android:layout_alignStart="@+id/logoLogin" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/email"
        android:layout_marginTop="5dp"
        android:layout_alignTop="@+id/emailLoginEditText"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:id="@+id/imageView6" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ikonpassword"
        android:layout_marginTop="4dp"
        android:layout_alignTop="@+id/passwordLoginEditText"
        android:layout_alignLeft="@+id/imageView6"
        android:layout_alignStart="@+id/imageView6" />

    <Button
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/next"
        android:background="@drawable/arrow"
        android:onClick="nextLevel"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

    <Button
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:onClick="back"
        android:background="@drawable/backicon"
        android:id="@+id/button2" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/logo"
        android:src="@drawable/ikonloat8"
        android:contentDescription="logo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/logoOr"
        android:src="@drawable/or"
        android:layout_below="@+id/passwordLoginEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:background="@drawable/fb"
        android:onClick="signupSosmed"
        android:layout_below="@+id/logoOr"
        android:layout_alignLeft="@+id/regTwitter"
        android:layout_alignStart="@+id/regTwitter"
        android:id="@+id/regFB" />

    <Button
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:background="@drawable/twitter"
        android:id="@+id/regTwitter"
        android:onClick="signupSosmed"
        android:layout_below="@+id/regFB"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true" />



</RelativeLayout>
