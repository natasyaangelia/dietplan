<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bgbmi"
    tools:context="com.example.dietplan.dietplanfull.MainActivity">

        <ImageView
            android:layout_marginTop="30dp"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:id="@+id/imageView"
            android:src="@drawable/logo1"
            android:contentDescription="logo"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="45dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Let's Start"
            android:id="@+id/SignUpButton"
            android:textColor="@color/brownText"
            android:background="@drawable/buttonstart"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/activity_horizontal_margin"
            android:layout_below="@+id/imageView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have account?"
            android:textColor="@color/brownText"
            android:id="@+id/taglineTextView"
            android:foreground="@android:color/transparent"
            android:gravity="center_horizontal"
            android:textSize="@dimen/activity_horizontal_margin"
            android:autoText="false"
            android:alpha="0.7"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/SignUpButton"
            android:layout_alignRight="@+id/logo"
            android:layout_alignEnd="@+id/logo" />


        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/logo"
            android:src="@drawable/ikonloat8"
            android:contentDescription="logo"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:text="Sign In"
            android:textColor="@color/brownText"
            android:id="@+id/LogInButton"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:textSize="@dimen/activity_horizontal_margin"
            android:layout_alignBottom="@+id/taglineTextView"
            android:layout_toRightOf="@+id/taglineTextView"
            android:layout_toEndOf="@+id/taglineTextView" />

</RelativeLayout>
