<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bgbmi"
    tools:context=".AskAnExpertActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/imageaskanexpert"
        android:id="@+id/imageAskAnExpert" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Email"
        android:textStyle="bold"
        android:textColor="@color/brownText"
        android:ems="10"
        android:id="@+id/txtViewEmail"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/imageAskAnExpert"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:background="@drawable/border"
        android:paddingLeft="5dp"
        android:id="@+id/txtEditEmail"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/txtViewEmail"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Question"
        android:textStyle="bold"
        android:textColor="@color/brownText"
        android:ems="10"
        android:id="@+id/txtYourQuestion"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/txtEditEmail"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:paddingLeft="5dp"
        android:id="@+id/txtEditYourQuestion"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/txtYourQuestion"
        android:gravity="top|left"
        android:inputType="textMultiLine"
        android:background="@drawable/border"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:lines="3"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:scrollHorizontally="false" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:text="Submit"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/btnSubmitQuestion"
        android:onClick="processSubmit"
        android:background="@drawable/buttonstart"
        android:layout_below="@+id/txtEditYourQuestion"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/logo"
        android:src="@drawable/ikonloat8"
        android:contentDescription="logo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />




</RelativeLayout>
