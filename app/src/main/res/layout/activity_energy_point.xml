<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EnergyPointActivity"
    android:nestedScrollingEnabled="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Your Energy Point(s)"
        android:id="@+id/txtTotalEnergyPoints"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/brownText"
        android:textSize="20dp"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/imageBackPoint"
        android:scaleType="fitXY"
        android:src="@drawable/bgbmi"
        android:layout_alignTop="@+id/txtPoint"
        android:cropToPadding="true"
        android:layout_marginTop="-13dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Point(s)"
        android:id="@+id/txtPoint"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:textColor="@color/brownText"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_alignParentBottom="false"
        android:layout_below="@id/txtTotalEnergyPoints"
        android:layout_centerHorizontal="true"  />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="You can get rewards from Oat 8 if you do this activity : "
        android:id="@+id/txtViewRewards"
        android:textSize="18dp"
        android:textColor="@color/brownText"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginTop="100dp"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/imagePoint1"
        android:scaleType="fitXY"
        android:onClick="btn15pt"
        android:background="@drawable/point1"
        android:layout_alignTop="@+id/txtViewRewards"
        android:cropToPadding="true"
        android:layout_below="@+id/txtViewRewards"
        android:layout_marginTop="60dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/imagePoint2"
        android:onClick="btn25pt"
        android:scaleType="fitXY"
        android:background="@drawable/point2"
        android:layout_alignTop="@+id/imagePoint1"
        android:cropToPadding="true"
        android:layout_below="@+id/imagePoint1"
        android:layout_marginTop="60dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/imagePoint3"
        android:onClick="btn310pt"
        android:scaleType="fitXY"
        android:background="@drawable/point3"
        android:layout_alignTop="@+id/imagePoint2"
        android:cropToPadding="true"
        android:layout_below="@+id/imagePoint2"
        android:layout_marginTop="60dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/imagePoint4"
        android:onClick="btn410pt"
        android:scaleType="fitXY"
        android:background="@drawable/point4"
        android:layout_alignTop="@+id/imagePoint3"
        android:cropToPadding="true"
        android:layout_below="@+id/imagePoint3"
        android:layout_marginTop="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Collect your point from the challenges and get reward from Oat 8 !"
        android:id="@+id/txtCollectYourPoint"
        android:textColor="@color/brownText"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_below="@+id/imagePoint4"/>

    <Button
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:id="@+id/imagePoint5"
        android:onClick="btn5rw"
        android:scaleType="fitXY"
        android:layout_marginTop="10dp"
        android:background="@drawable/point5"
        android:cropToPadding="true"
        android:layout_below="@+id/txtCollectYourPoint"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:id="@+id/imagePoint6"
        android:onClick="btn6rw"
        android:scaleType="fitXY"
        android:background="@drawable/point6"
        android:cropToPadding="true"
        android:layout_below="@+id/imagePoint5"
        android:layout_alignLeft="@+id/imagePoint5"
        android:layout_alignStart="@+id/imagePoint5"
        android:layout_marginTop="27dp" />

    <Button
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:id="@+id/imagePoint7"
        android:onClick="btn7rw"
        android:scaleType="fitXY"
        android:background="@drawable/point7"
        android:cropToPadding="true"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/imagePoint6"
        android:layout_alignLeft="@+id/txtEveryChallenges"
        android:layout_alignStart="@+id/txtEveryChallenges" />

    <TextView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Every challenges only for 1 day"
        android:id="@+id/txtEveryChallenges"
        android:textColor="@color/brownText"
        android:layout_below="@+id/imagePoint7"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textAlignment="center" />

    <ImageView
        android:layout_below="@+id/txtEveryChallenges"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imageView2"
        android:src="@drawable/ikonloat8"
        android:layout_marginTop="200dp"
        android:contentDescription="logo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />



</RelativeLayout>
</ScrollView>